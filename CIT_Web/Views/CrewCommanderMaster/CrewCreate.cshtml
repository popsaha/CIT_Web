@model CIT_Web.Models.ViewModel.RoleCrewVM

<div class="card" style="margin: 10px;">
    <div class="card-header text-white btn-color">
        <h5 class="card-title btn-color">Crew Commander Form</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="CrewCreate">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">User Name</label>
                        <input class="form-control" asp-for="CrewUser.UserName" />
                        <span class="text-danger" asp-validation-for="CrewUser.UserName"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input class="form-control" asp-for="CrewUser.Password" type="password" />
                        <span class="text-danger" asp-validation-for="CrewUser.Password"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" asp-for="CrewUser.RoleName">
                            <option selected disabled>Select a role</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.RoleName">@role.RoleName</option> <!-- Change RoleID to RoleName -->
                            }
                        </select>

                        <span class="text-danger" asp-validation-for="CrewUser.RoleName"></span>

                       
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-color me-2">
                    <i class="bi bi-save"></i> Submit
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Reset
                </button>
            </div>
        </form>
    </div>
</div>



<div class="table-tab-content" id="myTabContent">
    <div class="col-auto py-1 ms-2 mt-2">
        <div class="table-container" style="margin-right: 16px;">
            <table id="dataTable" class="table datatable table-bordered table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>UserName</th>
                        <th>Password</th>
                        <th> Date</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model.userMasters)
                    {
                        <tr>
                            <td><input type="checkbox"></td>
                            <td>@users.UserName</td>
                            <td>@users.Password</td>
                            <td>@users.CreatedOn</td>
                            <td>@users.IsActive</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@users.UserId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>