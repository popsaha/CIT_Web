@model List<CIT_Web.Models.Dto.Region.RegionDTO>


<div class="card " style="margin: 10px;">
    <div class="card-header text-white btn-color">
        <h5 class="card-title btn-color">Order Type Form</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Region Name </label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Data Source</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-color me-2">
                    <i class="bi bi-save"></i> Submit
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Reset
                </button>
            </div>


        </form>
    </div>
</div>




<div class="tab-container mt-3 ms-2" style="width: 100%">
    <div class="dashboard-tab-content" id="myTabContent">
        <!-- Tab panes go here -->
        <!-- Content -->
        <div class="col-auto  py-1 ms-2 mt-2">
            <div class="table-container" style="overflow-x:auto; margin-right: 16px;">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>

                            <th>Region Name</th>
                            @* <th>Data Source</th> *@
                            <th>Action</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var region in Model)
                        {
                            <tr>
                                <td><input type="checkbox"></td>
                                <td>@region.RegionName</td>
                                <td>
                                    <button class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }

                        <!-- Repeat similar rows for other data -->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Content End -->
    </div>
</div>

