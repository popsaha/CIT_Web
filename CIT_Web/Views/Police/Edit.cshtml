@model CIT_Web.Models.Dto.Police.PoliceUpdateDTO

<div class="card" style="margin: 10px;">
    <div class="card-header text-white btn-color-main">
        <h5 class="card-title btn-color-main">Edit Police</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="EditPolice" novalidate>
            <input type="hidden" asp-for="PoliceId" />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Contact Number</label>
                        <input class="form-control" asp-for="ContactNumber" type="number" />
                        <span class="text-danger" asp-validation-for="ContactNumber"></span>
                    </div>
                </div>
            </div>

            <div class="row">             
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input class="form-control" asp-for="Address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" for="IsActive">Active</label>
                        <select class="form-select" id="IsActive" asp-for="IsActive">
                            <option value="" disabled selected>Select Active Type</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                        <span class="text-danger" asp-validation-for="IsActive"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-color me-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="PoliceIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
