@model CIT_Web.Models.ViewModel.LoginVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fargo Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
            margin: 0;
        }

        .login-container {
            max-width: 400px;
            width: 100%;
            background-color: white;
            border-radius: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
            font-family: Arial, sans-serif;
        }

            .login-container img {
                width: 60px;
                margin-bottom: 20px;
            }

            .login-container h1 {
                font-size: 1.5rem;
                margin-bottom: 5px;
                color: #333;
            }

            .login-container p {
                color: #666;
                font-size: 0.9rem;
                margin-bottom: 30px;
            }

        .form-control {
            border: none;
            background-color: #f1f1f1;
            border-radius: 50px;
            padding: 10px 20px;
            margin-bottom: 20px;
        }

            .form-control:focus {
                box-shadow: none;
                background-color: #e6e6e6;
            }

        .btn-login {
            background-color: #032b56;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 10px 20px;
            width: 100%;
            font-size: 1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #005783, #008599);
                color: white;
            }

        .forgot-password {
            color: #032b56;
            font-size: 0.9rem;
            margin-top: 10px;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .register-text {
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .register-text a {
                color: #032b56;
                text-decoration: none;
            }

                .register-text a:hover {
                    text-decoration: underline;
                }
    </style>

    <script type="text/javascript">
        $('document').ready(function () {
            $("[id*=btnLogion]").click(function (e) {
                var isValid = true;
                var LoginResource = $("[id*=RES_DESC] ").val();
                var LoginResourceId = $("[id*=RES_EMAIL").val();
                if (LoginResource == "") {
                    alert("Type Name/User Id/Email to search");
                    isValid = false;
                    e.preventDefault();
                }
                else if (LoginResource != "" && LoginResourceId == "") {
                    alert("please Enter Valid User");
                    isValid = false;
                    e.preventDefault();
                } else {
                    isValid = true;
                }
            })
        })



                });
    </script>

</head>


<body>
    <form asp-controller="Login" asp-action="Index" method="post">
        <div class="login-container">
            <!-- Logo Section -->
            <img src="~/Image/logomain.png" />
            <!-- Welcome Text -->
            <h1>Welcome to Fargo!</h1>
            <p>Keep your data safe</p>

            <!-- Login Form -->
            @*  <form> *@
            <input asp-for="UserName" class="form-control" placeholder="Email" required>
            <input asp-for="Password" class="form-control" placeholder="Password" required>
            <input type="submit" class="btn btn-login" value="" />
            <@* button type="submit" class="btn btn-login">LOGIN</button> *@
            @* </form> *@

            <!-- Forgot Password Link -->
            <a href="#" class="forgot-password">Forgot password?</a>

            <!-- Register Section -->
            <div class="register-text">
                Don't have an account? <a href="#">Register!</a>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
