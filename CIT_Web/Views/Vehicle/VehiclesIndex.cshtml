<script>
    document.querySelector('form').addEventListener('submit', function (event) {
        const maintenanceDate = document.querySelector('[asp-for="VehicleForm.MaintenanceDate"]').value;
        if (new Date(maintenanceDate) < new Date()) {
            event.preventDefault();
            alert('Maintenance date cannot be in the past.');
        }
    });
</script>

