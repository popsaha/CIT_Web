@model CIT_Web.Models.ViewModel.VehicleVM

<div class="card" style="margin: 10px;">
    <div class="card-header text-white btn-color-main">
        <h5 class="card-title btn-color-main">Vehicle Form</h5>
    </div>
    <div class="card-body">
        <!-- Display success message if available -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <!-- Display form validation errors -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-action="VehiclesIndex" novalidate>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Registration No</label>
                        <input class="form-control" asp-for="VehicleForm.RegistrationNo" />
                        <span class="text-danger" asp-validation-for="VehicleForm.RegistrationNo"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Capacity</label>
                        <input class="form-control" asp-for="VehicleForm.Capacity" type="number" />
                        <span class="text-danger" asp-validation-for="VehicleForm.Capacity"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Maintenance Date</label>
                        <input class="form-control" asp-for="VehicleForm.MaintenanceDate" type="date" />
                        <span class="text-danger" asp-validation-for="VehicleForm.MaintenanceDate"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" for="VehicleType">Vehicle Type</label>
                        <select class="form-select" id="VehicleType" asp-for="VehicleForm.VehicleType">
                            <option value="" disabled selected>Select Vehicle Type</option>
                            <option value="Lead">Lead</option>
                            <option value="Chase">Chase</option>
                        </select>
                        <span class="text-danger" asp-validation-for="VehicleForm.VehicleType"></span>
                    </div>
                </div>

            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-color me-2">
                    <i class="bi bi-save"></i> Submit
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Reset
                </button>
            </div>
        </form>
    </div>
</div>

<div class="table-tab-content" id="myTabContent">
    <div class="col-auto py-1 ms-2 mt-2">
        <div class="table-container" style="margin-right: 16px;">
            <table id="dataTable" class="table datatable table-bordered table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Registration No</th>
                        <th>Capacity</th>
                        <th>Maintenance Date</th>
                        <th>Vehicle Type</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model.Vehicles)
                    {
                        <tr>
                            <td><input type="checkbox"></td>
                            <td>@vehicle.RegistrationNo</td>
                            <td>@vehicle.Capacity</td>
                            <td>@vehicle.MaintenanceDate</td>
                            <td>@vehicle.VehicleType</td>
                            <td>@vehicle.IsActive</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@vehicle.VehicleID" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("DeleteConfirmation", "Vehicle", new { id = vehicle.VehicleID })" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






