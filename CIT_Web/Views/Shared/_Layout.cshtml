    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var repeatsMode = document.getElementById('repeatsMode');
            var repeatsOnSelect = document.getElementById('choices-multiple-remove-button');

            // Initialize Choices.js on the "Repeats On" dropdown
            const multipleCancelButton = new Choices(repeatsOnSelect, {
                removeItemButton: true,
                maxItemCount: 5,
                searchResultLimit: 5,
                renderChoiceLimit: 5
            });

            // Function to toggle disable based on selected value
            function toggleRepeatsOn() {
                var selectedValue = repeatsMode.options[repeatsMode.selectedIndex].text.toLowerCase();

                if (selectedValue === 'daily') {
                    multipleCancelButton.disable();  // Disable the Choices instance
                } else {
                    multipleCancelButton.enable();   // Enable the Choices instance
                }
            }

            // Initialize the dropdown based on the current selection
            toggleRepeatsOn();

            // Add change event listener to toggle disable/enable
            repeatsMode.addEventListener('change', toggleRepeatsOn);
        });

        const choices1 = new Choices('#requesterName', { searchEnabled: true });
        const choices2 = new Choices('#pickupLocation', { searchEnabled: true });
        const choices3 = new Choices('#recipientName', { searchEnabled: true });
        const choices4 = new Choices('#deliveryLocation', { searchEnabled: true });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var masterModuleToggle = document.getElementById("masterModuleToggle");
            var submoduleMenu = document.getElementById("submoduleMenu");
            var dropdownIcon = document.getElementById("dropdownIcon");

            masterModuleToggle.addEventListener("click", function (event) {
                // Prevent the default action if necessary (optional)
                event.preventDefault();

                // Toggle the 'collapse' class to show/hide the submodule
                submoduleMenu.classList.toggle("collapse");

                // Toggle the icon between up and down
                if (submoduleMenu.classList.contains("collapse")) {
                    dropdownIcon.classList.remove("bi-chevron-up");
                    dropdownIcon.classList.add("bi-chevron-down");
                } else {
                    dropdownIcon.classList.remove("bi-chevron-down");
                    dropdownIcon.classList.add("bi-chevron-up");
                }
            });
        });


    </script>
    <script>
        $(document).ready(function () {
            // Initialize DataTable with pagination and search enabled
            var table = $('#dataTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true, // Enables the "entries per page" dropdown
                pageLength: 10,     // Default number of entries per page
                language: {
                    search: "Filter:",
                    lengthMenu: "Show _MENU_ entries",
                    paginate: {
                        next: "Next",
                        previous: "Previous"
                    }
                },
            });

            // Custom search input to filter by "Title" (Vehicle Type in this case)
            $('#searchInput').on('keyup', function () {
                table.columns(4).search(this.value).draw(); // 4 is the index of the "Vehicle Type" column
            });
